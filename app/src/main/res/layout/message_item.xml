<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color1">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/message_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:riv_corner_radius="100dp"
        android:src="@drawable/test"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_head"
        android:text="发帖名"
        android:layout_toRightOf="@id/message_head"
        android:textColor="@color/color2"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/message_settime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_name"
        android:text="1小时前"
        android:layout_toRightOf="@id/message_head"
        android:textColor="@color/color3"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/message_answer"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/message_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试文本"
        android:textColor="@color/color2"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_answer"
        android:background="@color/color0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="回复的内容"
        android:textColor="@color/color3"
        android:padding="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/message_ba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="xxx吧"
        android:textColor="@color/color3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color0"
        android:layout_below="@id/message_ba"
        >

    </TextView>
</RelativeLayout>