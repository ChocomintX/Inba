<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    >

    <RelativeLayout
        android:id="@+id/wode_message_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wode_message_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ba_home_return"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我收到的通知"
            android:textColor="@color/color2"
            android:textSize="20dp"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/wode_message_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/color3"
        android:textSize="20dp"
        android:text="暂未收到新消息"
        android:visibility="gone"
        android:layout_below="@+id/wode_message_top"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/wode_message_top"
        android:id="@+id/wode_message__recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>