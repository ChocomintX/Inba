<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a2a2a"
    android:orientation="vertical"
    tools:context=".controller.MainActivity">

    <com.example.wx.inba.util.NoScrollViewPager
        android:id="@+id/vpg"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

    </com.example.wx.inba.util.NoScrollViewPager>

    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#252525"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:src="@drawable/home"
                android:layout_marginBottom="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/home_text"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="首页"
                android:textColor="#a8a8a8"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_jinba"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ba"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="进吧"
                android:textColor="#a8a8a8"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_xiaoxi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:src="@drawable/message"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/shopping_text"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="消息"
                android:textColor="#a8a8a8"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_wode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:src="@drawable/wode"
                android:layout_marginBottom="5dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/myinf_text"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="我的"
                android:textColor="#a8a8a8"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>