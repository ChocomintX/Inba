<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/jinba_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:riv_corner_radius="20dp"
        android:src="@drawable/test"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/jinba_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test吧"
        android:textColor="@color/color2"
        android:layout_toRightOf="@+id/jinba_img"
        android:layout_alignTop="@+id/jinba_img"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/jinba_tiezi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color3"
        android:layout_below="@+id/jinba_name"
        android:layout_toRightOf="@+id/jinba_img"
        android:text="【测试标题】测试内容"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>