<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/wode_message_bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/color1">

    <TextView
        android:id="@+id/wode_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="通知内容"
        android:maxLines="1"
        android:textColor="@color/color2"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/wode_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wode_message_title"
        android:text="收到于"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/wode_message_time"
        android:background="@color/color0"
        />
</RelativeLayout>